{
  "files": [],
  "references": [{ "path": "./tsconfig.app.json" }, { "path": "./tsconfig.node.json" }],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // Gradually enable strict mode for production quality
    "strict": false, // Set to true once codebase is ready
    "noImplicitAny": true, // ENABLED: Catch implicit any types
    "strictNullChecks": true, // ENABLED: Prevent null/undefined bugs
    "noUnusedParameters": true, // ENABLED: Remove dead code
    "noUnusedLocals": true, // ENABLED: Remove unused variables
    "skipLibCheck": true,
    "allowJs": true,
    // Additional production-ready flags
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  }
}
